        <!-- Mobile theme toggle -->
        <div data-controller="theme">
          <button type="button" data-action="click->theme#toggle" class="text-muted hover:text-text transition p-2" title="Toggle theme">
            <svg data-theme-target="lightIcon" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
