  <!-- Mobile menu -->
  <div class="md:hidden hidden" data-mobile-menu-target="menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= link_to "Learning", learning_portfolio_path, class: "block px-3 py-2 #{nav_link_class(learning_portfolio_path)}" %>
      <%= link_to "Podcast", podcast_path, class: "block px-3 py-2 #{nav_link_class(podcast_path)}" %>
      <%= link_to "Blog", ENV.fetch('BLOG_URL', 'https://blog.example.com'), class: "block px-3 py-2 text-muted hover:text-text transition", target: "_blank" %>
