<div class="bg-background rounded-lg p-6 border border-primary/50 shadow-lg">
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-start space-x-3">
      <span class="text-3xl"><%= learning_item.icon %></span>
      <div>
        <h3 class="text-xl font-semibold text-text"><%= learning_item.name %></h3>
        <p class="text-sm text-muted"><%= learning_item.category %></p>
      </div>
    </div>
    <button type="button" class="text-muted hover:text-text transition" data-action="click->expandable#toggle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <% if learning_item.description.present? %>
    <p class="text-text mb-4"><%= learning_item.description %></p>
  <% end %>

  <div class="flex items-center gap-4 mb-4">
    <span class="inline-block px-2 py-1 text-xs rounded-full
      <%= case learning_item.status
          when 'learning' then 'bg-primary/20 text-primary'
          when 'practicing' then 'bg-yellow-500/20 text-yellow-400'
          when 'comfortable' then 'bg-secondary/20 text-secondary'
          when 'expert' then 'bg-purple-500/20 text-purple-400'
          end %>">
      <%= learning_item.status.humanize %>
    </span>
    <% if learning_item.started_at.present? %>
      <span class="text-sm text-muted">
        Started <%= learning_item.started_at.strftime("%B %Y") %>
      </span>
    <% end %>
  </div>

  <% if learning_item.resources.present? && learning_item.resources.any? %>
    <div class="mb-4">
      <h4 class="text-sm font-semibold text-muted mb-2">Resources</h4>
      <ul class="space-y-1">
        <% learning_item.resources.each do |resource| %>
          <li>
            <a href="<%= resource['url'] %>" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline text-sm">
              <%= resource['title'] || resource['url'] %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if learning_item.projects.present? && learning_item.projects.any? %>
    <div class="mb-4">
      <h4 class="text-sm font-semibold text-muted mb-2">Related Projects</h4>
      <ul class="space-y-1">
        <% learning_item.projects.each do |project| %>
          <li>
            <a href="<%= project['url'] %>" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline text-sm">
              <%= project['name'] || project['url'] %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if learning_item.notes.present? %>
    <div>
      <h4 class="text-sm font-semibold text-muted mb-2">Notes</h4>
      <div class="text-sm text-text prose prose-invert max-w-none">
        <%= simple_format(learning_item.notes) %>
      </div>
    </div>
  <% end %>
</div>
